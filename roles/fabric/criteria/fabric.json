{
    "type": "object",
    "required": ["fabric_cabling", "overlay_asn", "asn", "hardware", "loopback"],
    "properties": {
        "overlay_asn": {
            "type": "number",
            "minimum": 1,
            "maximum": 4294967294
        },
        "rr": {
            "type": "object",
            "properties": {
                "location": {
                    "type": "string",
                    "enum": ["spine", "borderleaf", "external"]
                },
                "neighbor_list": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "format": "ipv4"
                    }
                }
            },
            "if": {
                "properties": {
                    "location": { "const": "external" }
                },
                "required": ["location"]
            },
            "then": {"required": ["neighbor_list"]}
        },
        "p2p": {
            "oneOf": [
                {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "format": "ipv4network"
                    }
                },
                {
                    "type": "string",
                    "format": "ipv4network"
                }
            ]
        },
        "loopback": {
            "type": "string",
            "format": "ipv4network"
        },
        "asn": {
            "oneOf": [
                {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^\\d+(-|\\.\\.)\\d+$"
                    }
                },
                {
                    "type": "string",
                    "pattern": "^\\d+(-|\\.\\.)\\d+$"
                }
            ]
        },
        "fabric_cabling": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["endpoints"],
                "properties": {
                    "endpoints": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "pattern": "^.*:(e?\\d+[/-]\\d+|\\d+[/-]\\d+[/-]c?\\d+([/-]\\d+)?)$"
                        },
                        "minItems": 2,
                        "maxItems": 2
                    }
                }
            }
        },
        "hardware": {
            "type": "object",
            "patternProperties": {
                "^.*" : {
                    "type": "string",
                    "enum": ["IXR_D2", "IXR_D2L", "IXR_D3", "IXR_D3L", "IXR_H2"]
                }
            }
        },
        "overrides": {
            "type": "object",
            "patternProperties": {
                "^.*" : {
                    "type": "object",
                    "properties": {
                        "asn": {
                            "type": "number",
                            "minimum": 1,
                            "maximum": 4294967294
                        },
                        "loopback": {
                            "type": "string",
                            "format": "ipv4"
                        }
                    }
                }
            }
        },
        "edge_interfaces": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["nodes", "interfaces"],
                "properties": {
                    "nodes": {
                        "type": "string"
                    },
                    "interfaces": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
