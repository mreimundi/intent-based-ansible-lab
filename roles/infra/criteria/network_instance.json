{
    "type": "object",
    "patternProperties": {
        "^.*" : {
            "type": "object",
            "required": ["interfaces"],
            "properties": {
                "interfaces": {
                    "type": "array",
                    "items": {
                        "type": "string"
                        }
                    },
                "autonomous-system": {
                    "type": "number"
                    },
                "router-id": {
                    "type": "string",
                    "format": "ipv4"
                    },
                "protocols": {
                    "type": "object",
                    "properties": {
                        "bgp": {
                            "type": "object",
                            "properties": {
                                "dynamic": {
                                    "type": "object",
                                    "properties": {
                                        "interfaces": {
                                            "type": "object",
                                            "patternProperties": {
                                                ".+": {
                                                    "type": "object",
                                                    "required": ["allow-as", "peer-group"],
                                                    "properties": {
                                                        "allow-as": {
                                                            "type": "array",
                                                            "items": {
                                                                "type": "number"
                                                            }
                                                        },
                                                        "peer-group": {
                                                            "type": "string"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                },
                                "ipv4": {
                                    "type": "object",
                                    "properties": {
                                        "admin_state": {
                                            "type": "string",
                                            "enum": ["enable", "disable"]
                                        }
                                    }
                                },
                                "group": {
                                    "type": "object",
                                    "patternProperties": {
                                        "^.*": {
                                            "type": "object",
                                            "properties": {
                                                "peer_as": {
                                                    "type": "number"
                                                },
                                                "local_as": {
                                                    "type": "number"
                                                },
                                                "cluster_id": {
                                                    "type": "string"
                                                },
                                                "local_address": {
                                                    "type": "string",
                                                    "anyOf": [
                                                        {"format": "ipv4"},
                                                        {"format": "ipv6"}
                                                    ]
                                                },
                                                "export_policy": {
                                                    "type": "string"
                                                },
                                                "import_policy": {
                                                    "type": "string"
                                                },
                                                "ipv4": {
                                                    "type": "object",
                                                    "properties": {
                                                        "admin_state": {
                                                            "type": "string",
                                                            "enum": ["disable", "enable"]
                                                        }
                                                    }
                                                },
                                                "evpn": {
                                                    "type": "object",
                                                    "properties": {
                                                        "admin_state": {
                                                            "type": "string",
                                                            "enum": ["disable", "enable"]
                                                        }
                                                    }
                                                }

                                            }
                                        }
                                    }
                                },
                                "neighbor": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "patternProperties": {
                                        "^([0-9]{1,3}\\.){3}[0-9]{1,3}$": {
                                            "type": "object",
                                            "properties": {
                                                "peer_group": {
                                                    "type": "string"
                                                }
                                            },
                                            "required": ["peer_group"]
                                        },
                                        "^(((?:[0-9a-f]{1,4}:){7}[0-9a-f]{1,4})|((?:[0-9a-f]{1,4}:){1,6}:|(?:[0-9a-f]{1,4}:){1,5}(:[0-9a-f]{1,4}){1,2}|(?:[0-9a-f]{1,4}:){1,4}(:[0-9a-f]{1,4}){1,3}|(?:[0-9a-f]{1,4}:){1,3}(:[0-9a-f]{1,4}){1,4}|(?:[0-9a-f]{1,4}:){1,2}(:[0-9a-f]{1,4}){1,5}|[0-9a-f]{1,4}:((:[0-9a-f]{1,4}){1,6})|:((:[0-9a-f]{1,4}){1,7}|:)|fe80:(:[0-9a-f]{0,4}){0,4}%[0-9a-zA-Z]{1,}|::(ffff(:0{1,4}){0,1}:){0,1}((25[0-5]|(2[0-4]|1{0,1}[0-9]){0,1}[0-9]).){3}(25[0-5]|(2[0-4]|1{0,1}[0-9]){0,1}[0-9])))$": {
                                            "type": "object",
                                            "properties": {
                                                "peer_group": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
