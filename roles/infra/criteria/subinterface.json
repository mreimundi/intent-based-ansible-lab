{
    "type": "object",
    "patternProperties": {
        "^.+" : {
            "type": "object",
            "properties": {
                "ipv4_address": {
                    "type": "string",
                    "pattern": "^(([0-9]{1,3}\\.){3}[0-9]{1,3})/[0-9]{1,2}$",
                    "description": "IPv4 address with prefix"
                },
                "ipv6": {
                    "type": "object",
                    "properties": {
                        "ra": {
                            "type": "string",
                            "description": "IPv6 Router Advertisement",
                            "enum": ["enable", "disable"]
                        }
                    }
                }
            }
        }
    }
}